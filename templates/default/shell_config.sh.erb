# Generated by Chef for <%= node[:fqdn] %>

# system wide aliases
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -l'
alias ls='ls --color=auto'

# some aliases I'm used to have
alias gitroot='if [ "`git rev-parse --show-cdup`" != "" ]; then cd `git rev-parse --show-cdup`; fi'
alias follow='tail -n 0 -F'
alias truncate='echo -n >'

# source other files

# if autojump is installed load it
if [ -f /usr/share/autojump/autojump.sh ]; then
  source /usr/share/autojump/autojump.sh
fi

# bash only variables
if [ "$BASH" ]; then
  # don't put duplicate lines in the history. See bash(1) for more options
  export HISTCONTROL=ignoreboth
fi

# zsh only variables, this code is executed only if zsh is the default shell for current user
if [ "$ZSH_VERSION" ]; then
  # don't put duplicate lines in the history and command that starts with spaces
  setopt HIST_IGNORE_DUPS
  setopt HIST_IGNORE_SPACE
  # allow comments into command line, useful for cut and paste
  setopt INTERACTIVE_COMMENTS
fi
